<idea-plugin>
    <id>com.sourceplusplus.sourcemarker</id>
    <name>SourceMarker</name>
    <vendor>Source++</vendor>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.sourceplusplus.sourcemarker.services.MyApplicationService"/>
        <projectService serviceImplementation="com.sourceplusplus.sourcemarker.services.MyProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.sourceplusplus.sourcemarker.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
